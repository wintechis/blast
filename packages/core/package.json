  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "yarn run clean && yarn run bundle",
    "bundle": "webpack --config webpack.conf.cjs",
    "clean": "yarn rimraf dist",
    "lint": "eslint \"src/**\" --config .eslintrc.json",
    "fix": "eslint --fix \"src/** \"",
