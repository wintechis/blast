{
  "private": true,
  "name": "@blast/core",
  "version": "0.0.1",
  "main": "dist/index.cjs",
  "description": "BLAST - Block Applications for Things, Core Package",
  "author": "Thomas Wehr",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wintechis/blast.git"
  },
  "bugs": {
    "url": "https://github.com/wintechis/blast/issues"
  },
  "homepage": "https://github.com/wintechis/blast#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "node esbuild.js",
    "build:types": "tsc --emitDeclarationOnly --declaration --project tsconfig.json",
    "lint": "eslint \"src/**\" --config .eslintrc.json",
    "fix": "eslint --fix \"src/** \"",
