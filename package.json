{
    "private": true,
    "name": "blast",
    "packageManager": "yarn@3.3.0",
    "description": "Block Applications for Things",
    "version": "0.0.1",
    "author": "Thomas Wehr",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/wintechis/blast.git"
    },
    "license": "AGPL-3.0",
    "scripts": {
        "build": "yarn workspaces foreach run build",
        "lint": "yarn workspaces foreach run lint",
        "test": "yarn workspaces foreach run test",
        "install": "yarn workspace @blast/core install && yarn workspace @blast/web install",
        "start": "yarn workspace @blast/web run start"
    },
    "type": "module",
    "workspaces": [
        "./packages/*"
    ],
    "engines": {
        "node": "18.12.0"
    },
    "dependencies": {
        "@types/node": "latest",
        "@types/web-bluetooth": "latest",
        "@typescript-eslint/eslint-plugin": "latest",
        "@typescript-eslint/parser": "latest",
        "eslint": "latest",
        "eslint-config-google": "latest",
        "eslint-config-prettier": "latest",
        "eslint-plugin-node": "latest",
        "eslint-plugin-react": "latest",
        "license-checker-rseidelsohn": "^4.1.1",
        "prettier": "latest",
        "typescript": "latest"
    },
    "devDependencies": {
        "husky": "^8.0.3",
        "lint-staged": "^13.2.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && yarn build"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix"
        ]
    }
}
