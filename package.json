        "eslint": "latest",
        "eslint-config-prettier": "latest",
        "eslint-plugin-n": "^17.6.0",
        "ndjson-cli": "latest",
        "prettier": "latest",
        "typescript": "latest",
        "typescript-eslint": "^7.8.0"
    },
    "packageManager": "yarn@3.8.1",
    "dependencies": {
        "gh-pages": "^6.3.0"
