{
    "private": true,
    "name": "blast",
    "packageManager": "yarn@3.5.1",
    "description": "Block Applications for Things",
    "version": "0.0.1",
    "author": "Thomas Wehr",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/wintechis/blast.git"
    },
    "license": "AGPL-3.0",
    "scripts": {
        "install": "yarn workspace @blast/core install && yarn workspace @blast/web install",
        "build": "yarn workspace @blast/core run build && yarn workspace @blast/web run build",
        "lint": "yarn workspace @blast/core run lint && yarn workspace @blast/web run lint",
        "test": "yarn workspace @blast/core run test && yarn workspace @blast/web run test",
        "test:coverage": "yarn workspace @blast/core run test:coverage && yarn workspace @blast/web run test:coverage",
        "start": "yarn workspace @blast/web run start"
    },
    "type": "module",
    "workspaces": [
        "./packages/*"
    ],
    "engines": {
        "node": ">=16.0.0",
        "yarn": ">=3.5.1"
    },
    "dependencies": {
        "@types/node": "latest",
        "@types/web-bluetooth": "latest",
        "@typescript-eslint/eslint-plugin": "latest",
        "@typescript-eslint/parser": "latest",
        "eslint": "latest",
        "eslint-config-google": "latest",
        "eslint-config-prettier": "latest",
        "eslint-plugin-node": "latest",
        "eslint-plugin-react": "latest",
        "lint-staged": "latest",
        "prettier": "latest",
        "typescript": "latest"
    },
    "lint-staged": {
        "packages/*/src/**": "eslint"
    }
}
