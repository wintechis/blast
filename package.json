{
  "name": "blast",
  "version": "0.0.1",
  "description": "Block Applications for Things",
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wintechis/blast.git"
  },
  "bugs": {
    "url": "https://github.com/wintechis/blast/issues"
  },
  "homepage": "https://github.com/wintechis/blast#readme",
  "author": "Thomas Wehr",
  "scripts": {
    "build": "yarn run clean && tsc && yarn run copy && yarn run build:web",
    "build:web": "cd examples/web/ && yarn install && yarn run build",
    "copy": "copyfiles -u 1 \"src/**/*.js\" dist/",
    "jsdoc": "gulp jsdoc",
    "lint": "eslint \"src/**/**.js\"",
    "clean": "yarn rimraf dist",
    "compile": "yarn run clean && tsc && yarn run copy && yarn run build:web",
    "fix": "eslint --fix \"src/**/**.js\"",
    "prepare": "yarn run compile",
    "pretest": "yarn run compile",
    "test": "mocha --loader=esmock \"test/**/*.mocha.js\" -u tdd",
    "posttest": "yarn run lint"
  },
  "type": "module",
  "main": "index.html",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@blockly/dev-tools": "^3.0.7",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "chai": "^4.3.6",
    "copyfiles": "^2.4.1",
    "eslint": "^7.15.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "esmock": "^1.7.4",
    "gts": "^3.1.0",
    "js-interpreter": "https://github.com/derwehr/js-interpreter.git",
    "jsdoc": "^3.6.7",
    "mocha": "^9.2.2",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sinon": "^13.0.1",
    "typescript": "^4.0.3",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@elgato-stream-deck/webhid": "^5.2.0",
    "@inrupt/solid-client": "^1.19.0",
    "@node-wot/core": "^0.7.8",
    "@types/web-bluetooth": "^0.0.13",
    "blockly": "7.20211209.3",
    "file-saver": "^2.0.5",
    "joy-con-webhid": "^0.2.0",
    "urdf": "https://github.com/derwehr/uRDF.js.git",
    "webpack": "^5.70.0",
    "wot-typescript-definitions": "^0.8.0-SNAPSHOT.21"
  },
  "packageManager": "yarn@3.2.0"
}
