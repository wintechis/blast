<xml xmlns="https://developers.google.com/blockly/xml">
  <block type="server_add_connector">
    <value name="port">
      <block type="number_value">
        <field name="NUM">8080</field>
      </block>
    </value>
    <statement name="list">
      <block type="server_route">
        <field name="operation">get</field>
        <value name="route">
          <block type="string">
            <field name="TEXT">/get</field>
          </block>
        </value>
        <statement name="list">
          <block type="server_response">
            <value name="response">
              <block type="string">
                <field name="TEXT">Hello from Express.js!</field>
              </block>
            </value>
          </block>
        </statement>
        <next>
          <block type="server_route">
            <field name="operation">put</field>
            <value name="route">
              <block type="string">
                <field name="TEXT">/put</field>
              </block>
            </value>
            <statement name="list">
              <block type="server_response">
                <value name="response">
                  <block type="server_get_body"></block>
                </value>
              </block>
            </statement>
            <next>
              <block type="server_route">
                <field name="operation">post</field>
                <value name="route">
                  <block type="string">
                    <field name="TEXT">/post</field>
                  </block>
                </value>
                <statement name="list">
                  <block type="server_response">
                    <value name="response">
                      <block type="server_get_body"></block>
                    </value>
                  </block>
                </statement>
                <next>
                  <block type="server_route">
                    <field name="operation">delete</field>
                    <value name="route">
                      <block type="string">
                        <field name="TEXT">/delete</field>
                      </block>
                    </value>
                    <statement name="list">
                      <block type="server_response">
                        <value name="response">
                          <block type="string">
                            <field name="TEXT">Got a delete request at /delete</field>
                          </block>
                        </value>
                      </block>
                    </statement>
                  </block>
                </next>
              </block>
            </next>
          </block>
        </next>
      </block>
    </statement>
  </block>
</xml>