<xml xmlns="https://developers.google.com/blockly/xml">
  <block type="add_server_block">
    <next>
      <block type="server_route">
        <field name="operation">get</field>
        <value name="route">
          <block type="string">
            <field name="TEXT">/test</field>
          </block>
        </value>
        <statement name="list">
          <block type="response_block">
            <value name="response">
              <block type="string">
                <field name="TEXT">Hello World!</field>
              </block>
            </value>
          </block>
        </statement>
        <next>
          <block type="start_server">
            <value name="port">
              <block type="number_value">
                <field name="NUM">8080</field>
              </block>
            </value>
          </block>
        </next>
      </block>
    </next>
  </block>
</xml>